# STUN Server for NAT Simulation Tests
# Provides UDP-based reflexive address discovery for peers behind NAT

FROM rust:1.83-slim-bookworm AS builder

WORKDIR /build

RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    cmake \
    && rm -rf /var/lib/apt/lists/*

COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY tests/nat_simulation/src/stun_server.rs ./tests/nat_simulation/src/stun_server.rs

RUN cargo build --release --bin nat_stun_server

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /build/target/release/nat_stun_server /app/nat_stun_server

WORKDIR /app

# STUN uses UDP port 3478 by default
EXPOSE 3478/udp

CMD ["/app/nat_stun_server"]
